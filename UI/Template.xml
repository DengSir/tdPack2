<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Button name="tdPack2RuleItemTemplate" movable="true" enableMouse="true" virtual="true">
        <Size x="302" y="24" />
        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="Text" inherits="GameFontNormal" justifyH="LEFT" wordWrap="false">
                    <Anchors>
                        <Anchor point="LEFT" x="5" y="0" />
                        <Anchor point="RIGHT" x="-5" y="0" />
                        <!-- <Anchor point="RIGHT" relativeKey="$parent.Count" relativePoint="LEFT" x="-5" y="0" /> -->
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="BACKGROUND">
            </Layer>
        </Layers>
        <HighlightTexture>
            <Color r="1" g="1" b="1" a="0.2" />
        </HighlightTexture>
        <Scripts>
            <OnLoad>
                self:RegisterForDrag('LeftButton')
            </OnLoad>
        </Scripts>
    </Button>
    <Frame name="tdPack2RuleOptionFrameTemplate" parent="UIParent" hidden="true" movable="true" enableMouse="true" frameStrata="MEDIUM" inherits="ButtonFrameTemplate" virtual="true">
        <Size x="337" y="423" />
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Frames>
            <ScrollFrame parentKey="Rule" inherits="HybridScrollFrameTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.Inset" relativePoint="TOPLEFT" x="5" y="-4" />
                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent.Inset" relativePoint="BOTTOMRIGHT" x="-20" y="3" />
                </Anchors>
                <Frames>
                    <Slider parentKey="scrollBar" inherits="HybridScrollBarTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="0" y="-14" />
                            <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" x="0" y="13" />
                        </Anchors>
                    </Slider>
                </Frames>
            </ScrollFrame>
        </Frames>
        <Scripts>
            <OnMouseDown>
                self:StartMoving()
            </OnMouseDown>
            <OnMouseUp>
                self:StopMovingOrSizing()
            </OnMouseUp>
        </Scripts>
    </Frame>
</Ui>
